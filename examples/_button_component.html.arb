div class: "p-4 space-x-4" do
  tailmix ButtonComponent, intent: :primary, look: :outline, id: "button-1" do |ui|
    div ui.button.component do
      "button: primary outline".upcase
    end
  end

  tailmix ButtonComponent, intent: :danger, look: :outline, id: "button-2" do |ui|
    div ui.button.component do
      "button: danger outline".upcase
    end
  end

  tailmix ButtonComponent, intent: :primary, id: "button-3" do |ui|
    div ui.button.component do
      "button: primary".upcase
    end
  end

  tailmix ButtonComponent, intent: :danger, id: "button-4" do |ui|
    div ui.button.component do
      "button: danger".upcase
    end
  end
end
